{
  "name": "oscnews",
  "version": "1.0",
  "description": "开源中国新闻",
  "icons": {
    "128": "img/osc-logo.png"
  },
  "permissions": [
    "*://*/*",
    "declarativeContent",
    "tabs",
    "unlimitedStorage"
  ],
  "background": {
    "scripts": [
      "js/background.js"
    ]
  },
  "browser_action": {
    "default_title": "",
    "default_icon": "img/osc-logo.png"
  },
  "content_scripts": [
    {
      "matches": [ "*://*/*" ],
      "js": [ "js/getcontent.js" ]
    }
  ],
  "manifest_version": 2,
  "chrome_url_overrides": {
    "newtab": "background.html"
  }
}